import javax.swing.*;
import java.awt.*;
import java.awt.event.*;

public class SwingExample extends JFrame {

    public SwingExample() {
    
        setTitle("worms are in my applets");
        setSize(300, 200);
        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setLocationRelativeTo(null);  // Center on screen
        createGUI();
    }

    private void createGUI() {
        JLabel label = new JLabel("worms are in my applets");
        label.setHorizontalAlignment(JLabel.CENTER);
        label.setBorder(BorderFactory.createMatteBorder(5, 5, 5, 5, Color.BLACK));

        // Add the label to the frame's content pane
        getContentPane().add(label, BorderLayout.CENTER);
    }

    public static void main(String[] args) {
        // Make sure to invoke GUI creation on the Event Dispatch Thread
        SwingUtilities.invokeLater(new Runnable() {
            @Override
            public void run() {
                new SwingExample().setVisible(true);
            }
        });
    }
}
